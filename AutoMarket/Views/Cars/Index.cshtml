@model AutoMarket.ViewModels.CarsQueryViewModel

@{
    ViewData["Title"] = "Коли";
}

<div class="container my-4">

    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <h5 class="card-title mb-3">Търсене на автомобили</h5>

            <form method="get" class="row g-3 align-items-end" id="filtersForm">

                <input type="hidden" asp-for="Page" value="1" />
                <input type="hidden" asp-for="PageSize" />

                <div class="col-md-3">
                    <label class="form-label">Марка</label>
                    <select class="form-select" asp-for="MakeId" asp-items="Model.Makes" id="makeSelect">
                        <option value="">Всички</option>
                    </select>
                </div>

                <div class="col-md-3">
                    <label class="form-label">Модел</label>
                    <select class="form-select" asp-for="CarModelId" asp-items="Model.CarModels" id="modelSelect">
                        <option value="">Всички</option>
                    </select>
                </div>

                <div class="col-md-3">
                    <label class="form-label">Гориво</label>
                    <select class="form-select" asp-for="FuelType">
                        <option value="">Всички</option>
                        <option value="Бензин">Бензин</option>
                        <option value="Дизел">Дизел</option>
                        <option value="Хибрид">Хибрид</option>
                        <option value="Електрическа">Електрическа</option>
                        <option value="Газ">Газ</option>
                    </select>
                </div>

                <div class="col-md-3">
                    <label class="form-label">Скорости</label>
                    <select class="form-select" asp-for="Transmission">
                        <option value="">Всички</option>
                        <option value="Ръчна">Ръчна</option>
                        <option value="Автоматична">Автоматична</option>
                    </select>
                </div>

                <div class="col-md-2">
                    <label class="form-label">Год. от</label>
                    <input class="form-control" asp-for="YearFrom" type="number" min="1950" max="2100" />
                </div>

                <div class="col-md-2">
                    <label class="form-label">до</label>
                    <input class="form-control" asp-for="YearTo" type="number" min="1950" max="2100" />
                </div>

                <div class="col-md-2">
                    <label class="form-label">Цена от</label>
                    <input class="form-control" asp-for="PriceFrom" type="number" min="0" />
                </div>

                <div class="col-md-2">
                    <label class="form-label">до</label>
                    <input class="form-control" asp-for="PriceTo" type="number" min="0" />
                </div>

                <div class="col-md-2">
                    <label class="form-label">Сортиране</label>
                    <select class="form-select" asp-for="Sort">
                        <option value="">Най-нови</option>
                        <option value="price_asc">Цена ↑</option>
                        <option value="price_desc">Цена ↓</option>
                        <option value="km_asc">Пробег ↑</option>
                        <option value="year_desc">Година ↓</option>
                    </select>
                </div>

                <div class="col-md-2 d-grid">
                    <button class="btn btn-primary" type="submit">Търси</button>
                </div>

                <div class="col-md-2 d-grid">
                    <a class="btn btn-outline-secondary" asp-action="Index">Изчисти</a>
                </div>
            </form>
        </div>
    </div>

    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="mb-0">Налични автомобили</h2>
        <div class="text-muted">Общо: @Model.TotalCount</div>
    </div>

    @if (!Model.Cars.Any())
    {
        <div class="alert alert-warning">Няма намерени автомобили по избраните критерии.</div>
    }
    else
    {
        <div class="row g-4">
            @foreach (var car in Model.Cars)
            {
                <div class="col-md-4">
                    <div class="card h-100 shadow-sm">
                        <img src="@(string.IsNullOrWhiteSpace(car.ImageUrl) ? "/img/no-car.jpg" : car.ImageUrl)"
                             class="card-img-top" style="height:220px; object-fit:cover;" alt="car" />
                        <div class="card-body">
                            <h5 class="card-title">@car.CarModel.Make.Name @car.CarModel.Name</h5>

                            <div class="d-flex flex-wrap gap-2 mb-2">
                                <span class="badge text-bg-light">@car.Year</span>
                                <span class="badge text-bg-light">@car.MileageKm.ToString("N0") км</span>
                                <span class="badge text-bg-light">@car.FuelType</span>
                                <span class="badge text-bg-light">@car.Transmission</span>
                            </div>

                            <div class="fs-5 fw-bold text-primary">@car.Price.ToString("N0") лв.</div>
                        </div>
                        <div class="card-footer bg-white border-0 pb-3">
                            <a class="btn btn-outline-primary w-100" asp-action="Details" asp-route-id="@car.Id">Виж детайли</a>
                        </div>
                    </div>
                </div>
            }
        </div>

        @* Paging *@
        @if (Model.TotalPages > 1)
        {
            <nav class="mt-4">
                <ul class="pagination justify-content-center">
                    <li class="page-item @(Model.Page <= 1 ? "disabled" : "")">
                        <a class="page-link"
                           asp-action="Index"
                           asp-route-MakeId="@Model.MakeId"
                           asp-route-CarModelId="@Model.CarModelId"
                           asp-route-FuelType="@Model.FuelType"
                           asp-route-Transmission="@Model.Transmission"
                           asp-route-YearFrom="@Model.YearFrom"
                           asp-route-YearTo="@Model.YearTo"
                           asp-route-PriceFrom="@Model.PriceFrom"
                           asp-route-PriceTo="@Model.PriceTo"
                           asp-route-Sort="@Model.Sort"
                           asp-route-Page="@(Model.Page - 1)"
                           asp-route-PageSize="@Model.PageSize">←</a>
                    </li>

                    @for (int p = 1; p <= Model.TotalPages; p++)
                    {
                        <li class="page-item @(p == Model.Page ? "active" : "")">
                            <a class="page-link"
                               asp-action="Index"
                               asp-route-MakeId="@Model.MakeId"
                               asp-route-CarModelId="@Model.CarModelId"
                               asp-route-FuelType="@Model.FuelType"
                               asp-route-Transmission="@Model.Transmission"
                               asp-route-YearFrom="@Model.YearFrom"
                               asp-route-YearTo="@Model.YearTo"
                               asp-route-PriceFrom="@Model.PriceFrom"
                               asp-route-PriceTo="@Model.PriceTo"
                               asp-route-Sort="@Model.Sort"
                               asp-route-Page="@p"
                               asp-route-PageSize="@Model.PageSize">@p</a>
                        </li>
                    }

                    <li class="page-item @(Model.Page >= Model.TotalPages ? "disabled" : "")">
                        <a class="page-link"
                           asp-action="Index"
                           asp-route-MakeId="@Model.MakeId"
                           asp-route-CarModelId="@Model.CarModelId"
                           asp-route-FuelType="@Model.FuelType"
                           asp-route-Transmission="@Model.Transmission"
                           asp-route-YearFrom="@Model.YearFrom"
                           asp-route-YearTo="@Model.YearTo"
                           asp-route-PriceFrom="@Model.PriceFrom"
                           asp-route-PriceTo="@Model.PriceTo"
                           asp-route-Sort="@Model.Sort"
                           asp-route-Page="@(Model.Page + 1)"
                           asp-route-PageSize="@Model.PageSize">→</a>
                    </li>
                </ul>
            </nav>
        }
    }
</div>

@section Scripts {
    <script>
        (function () {
            const makeSelect = document.getElementById('makeSelect');
            const modelSelect = document.getElementById('modelSelect');

            async function loadModels(makeId, selectedModelId) {
                modelSelect.innerHTML = '';
                const optAll = document.createElement('option');
                optAll.value = '';
                optAll.textContent = 'Всички';
                modelSelect.appendChild(optAll);

                if (!makeId) return;

                const resp = await fetch(`/Cars/ModelsByMake?makeId=${encodeURIComponent(makeId)}`);
                if (!resp.ok) return;

                const data = await resp.json();
                for (const m of data) {
                    const opt = document.createElement('option');
                    opt.value = m.id;
                    opt.textContent = m.name;
                    if (selectedModelId && String(selectedModelId) === String(m.id)) opt.selected = true;
                    modelSelect.appendChild(opt);
                }
            }

            makeSelect.addEventListener('change', async function () {
                await loadModels(makeSelect.value, null);
            });

            // On load: ако има избрана марка, презареди моделите и маркирай текущия модел
            const selectedModel = modelSelect.value;
            if (makeSelect.value) {
                loadModels(makeSelect.value, selectedModel);
            }
        })();
    </script>
}
